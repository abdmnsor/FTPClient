<Window x:Class="FTPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTPClient"
        mc:Ignorable="d"
        Title="FTP Manager" Height="900" Width="800" Background="#F0F0F0">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Server Connection Information -->
        <GroupBox Grid.Row="0" Header="Server Connection" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Server:" Margin="0,0,10,5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtServer" Text="" Margin="0,0,0,5" Padding="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Username:" Margin="0,0,10,5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtUsername" Text="" Margin="0,0,0,5" Padding="5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Password:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="txtPassword" Password="" Padding="5"/>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0" x:Name="btnDownloadStor2003" Content="Download Stor2003 Files" Height="40" Margin="0,0,5,0" Click="btnDownload_Click" Background="#007ACC" Foreground="White"/>
            <Button Grid.Column="1" Grid.Row="0" x:Name="btnUploadStor2003" Content="Upload Stor2003 File" Height="40" Margin="5,0,0,0" Click="btnUpload_Click" Background="#007ACC" Foreground="White"/>
            <Button Grid.Column="0" Grid.Row="1" x:Name="btnDownloadCustomerData" Content="Download Customer Data" Height="40" Margin="0,0,5,0"  Background="#007ACC" Foreground="White" Click="btnDownloadCustomerData_Click"/>
            <Button Grid.Column="1" Grid.Row="1" x:Name="btnDownloadAnyFile" Content="Download Any File" Height="40" Margin="5,0,0,0"  Background="#007ACC" Foreground="White" Click="btnDownloadAnyFile_Click"/>
            <Button Grid.ColumnSpan="2" Grid.Row="2" x:Name="btnRunStor2003MDB" Content="Run Stor2003.MDB" Height="40" Margin="5,0,0,0"  Background="#007ACC" Foreground="White" Click="btnRunStor2003MDB_Click"/>

        </Grid>

        <!-- Progress Bar -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" x:Name="txtStatus" Text="Ready" Margin="0,0,0,5"/>
            <ProgressBar Grid.Row="1" x:Name="progressBar" Height="20" Value="0" Maximum="100"/>
        </Grid>

        <!-- Log View -->
        <GroupBox Grid.Row="3" Header="Log" Padding="10" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="txtLog" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" Background="#FAFAFA"/>
            </ScrollViewer>
        </GroupBox>

        <!-- File Listing -->
        <GroupBox Grid.Row="4" Header="Extracted Files" Padding="10">
            <ListBox x:Name="lstExtractedFiles" Height="80"/>
        </GroupBox>
    </Grid>
</Window>
